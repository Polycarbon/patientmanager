<div class="row"></div>
<div class="row">
  <div class="col s3 m3"></div>
  <div class="col s6 m6 z-depth-3 ">
    <img src="/img/logo.png" class="logo">
    <h4 class="center-align" style="font-family: Ekk;">ผู้ป่วยใหม่</h4>
    <br>
    <div class="row col s12 register">
      <form id="demo1"  action="/patient/add/new/save" method="post">
      
        <div class="input-field col s6">
          <input type="text" name="name" id="name" class="validate" required>
          <label for="name">ชื่อ-สกุล</label>
        </div>
        <div class="input-field col s2">
          <input type="number" name="age" id="age" class="validate" required>
          <label for="age">อายุ</label>
        </div>
        <div class="input-field col s4">
          <input type="text" name="job" id="job" class="validate">
          <label for="job">อาชีพ</label>
        </div>

        <div class="input-field col s3">
          <input type="number" name="weight" id="weight" class="validate" required>
          <label for="weight">น้ำหนัก (กก.)</label>
        </div>
        <div class="input-field col s3">
          <input type="number" name="height" id="height" class="validate" required>
          <label for="height">สูง (ซม.)</label>
        </div>
        <div class="input-field col s3">
          <input type="text" name="HN" id="HN" class="validate" required>
          <label for="job">HN</label>
        </div>
        <div class="input-field col s3">
          <input type="text" name="ward" id="ward" class="validate" required>
          <label for="ward">Ward</label>
        </div>

        <div class="input-field col s2">
          <input type="text" name="G" id="G" required>
          <label for="G">G</label>
        </div>
        <div class="input-field col s2">

          <input type="text" name="P" id="P" required>
          <label for="P">P</label>
        </div>
        <div class="input-field col s2">
          <input type="text" name="A" id="A" required>
          <label for="A">A</label>
        </div>
        <div class="input-field col s2">
          <input type="text" name="L" id="L" required>
          <label for="L">L</label>
        </div>
        <div class="input-field col s3">
          <input type="text" name="GA" id="GA" required>
          <label for="GA">GA (wks)</label>
        </div>

        <div class="input-field col s4">
          <input type="text" name="addr1" id="addr1" class="validate" required>
          <label for="addr1">เลขที่</label>
        </div>
        <div class="input-field col s4">
          <input type="text" name="addr2" id="addr2" required>
          <label for="addr2">หมู่/ถนน</label>
        </div>
        <div class="input-field col s4">
          <label for="addr3">ตำบล</label>
          <input type="text" name="addr3" id="addr3" >

        </div>

        <div class="input-field col s4">
          <input type="text" name="addr4" id="addr4" class="uk-input uk-width-1-1" >
          <label for="addr4">อำเภอ</label>
        </div>

        <div class="input-field col s4">
          <input type="text" name="addr5" id="addr5" class="uk-input uk-width-1-1" >
          <label for="addr5">จังหวัด</label>
        </div>
        <div class="input-field col s4">
          <input type="tel" name="phone" id="phone" required>
          <label for="phone">โทรศัพท์</label>
        </div>

        <div class="row"></div>
        <div class="right" style="margin-right:10px;">
          <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
          <a class="btn waves-effect waves-light red" href="javascript:history.back()" name="action">Cancel</a>
        </div>
      </form>
    </div>
  </div>
  <div class="col s3 m3"></div>
</div>